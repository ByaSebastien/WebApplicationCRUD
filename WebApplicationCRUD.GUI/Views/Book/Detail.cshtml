@using WebApplicationCRUD.IL.Sessions
@model WebApplicationCRUD.Models.Entities.Book
@inject SessionManager _session
@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Auteur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        @if (Model.Image is not null)
        {
            <dt class="col-sm-2">
                Image
            </dt>
            <dd class="col-sm-10">
                <img src="~/Images/@Model.Image" class="book-img" />
            </dd>
        }
    </dl>
</div>
<div>
    @if (_session.CurrentUser is not null)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editer</a>
    }
    <a asp-action="Index" class="btn btn-primary" class="btn btn-primary btn-lg">Retour à la liste</a>
</div>
